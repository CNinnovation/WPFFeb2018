<Window x:Class="BookSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookSample"
        xmlns:models="clr-namespace:BookSample.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <models:Book x:Key="myBook" Title="ein buch" Publisher="ich" ISBN="123456-456456-78954112" />
    </Window.Resources>
    <Grid>
        <Button Content="{StaticResource myBook}" />
    </Grid>
</Window>
