<Window x:Class="BooksSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksSample"
        xmlns:models="clr-namespace:BooksSample.Models"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <!--<Window.Resources>
        <ObjectDataProvider x:Key="bookProvider" ObjectType="{x:Type models:BookFactory}" MethodName="GetBooks" />
    </Window.Resources>-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!-- <ListBox ItemsSource="{Binding Source={StaticResource bookProvider}}" />
        <StackPanel Grid.Column="1" DataContext="{StaticResource bookProvider}">-->
        <ListBox ItemsSource="{Binding}" IsSynchronizedWithCurrentItem="True" />
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding /Title}" />
            <TextBlock Text="{Binding /Publisher}" />
            <TextBlock Text="{Binding /Isbn}" />
        </StackPanel>
    </Grid>
</Window>
